<!DOCTYPE html>
<html>

<head>
    <title>User Detail</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <div class="container">
        <h1>User Detail</h1>
        <table>
            <tbody>
                <tr>
                    <td>Username</td>
                    <td>:</td>
                    <td>
                        <%= user.username %>
                    </td>
                </tr>

                <tr>
                    <td>Email</td>
                    <td>:</td>
                    <td>
                        <%= user.email %>
                    </td>
                </tr>
                <tr>
                    <td>Birth Date</td>
                    <td>:</td>
                    <td>
                        <%= user.birthDate %>
                    </td>
                </tr>
                <tr>
                    <td>Age</td>
                    <td>:</td>
                    <td>
                        <%= user.age %>
                    </td>
                </tr>
                <tr>
                    <td>Tickets acquired</td>
                    <td>:</td>
                    <td>
                        <%= user.ticketsAcquired% %>
                    </td>
                </tr>
                <tr>
                    <td>Points</td>
                    <td>:</td>
                    <td>
                        <%= user.points %>
                    </td>
                </tr>
                <tr>
                    <td>Status</td>
                    <td>:</td>
                    <td>
                        <%= user.status %>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <h3><a href="/users">See all users</a></h3>
</body>

</html>